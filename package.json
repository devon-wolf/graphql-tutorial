{
  "name": "graphql-tutorial",
  "version": "1.0.0",
  "description": "Learning GraphQL",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --verbose --runInBand --testLocationInResults --detectOpenHandles --setupFiles dotenv/config",
    "test:watch": "jest --watch --verbose --runInBand --testLocationInResults --detectOpenHandles --setupFiles dotenv/config",
    "start": "tsc && npm:copy-graphql && node -r dotenv/config dist/server.js",
    "start:dev": "nodemon  -r dotenv/config dist/server.js",
    "build:dev": "tsc --watch --preserveWatchOutput && npm:copy-graphql",
    "copy-graphql": "cp ./src/lib/graphql/schema.graphql ./dist/lib/graphql/",
    "start:watch": "npm run copy-graphql && concurrently \"npm:build:dev\" \"npm:start:dev\"",
    "setup-db": "tsc && node -r dotenv/config dist/setup-db.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "apollo-server": "^3.3.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.0",
    "pg": "^8.6.0"
  }
}
